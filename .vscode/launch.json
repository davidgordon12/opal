    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'opal'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=opal",
                    "--package=opal",
                ],
                "filter": {
                    "name": "opal",
                    "kind": "bin"
                }
            },
            "args": ["a.opal"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'opal'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=opal",
                    "--package=opal"
                ],
                "filter": {
                    "name": "opal",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}